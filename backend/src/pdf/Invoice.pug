doctype html
html
  head
    link(rel="shortcut icon" type="image/png" href="/images/icons/favicon.png")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    style.
      .sheet {
        margin: 0;
        width: 100%; 
        height: 297mm;
      }

      body{
        width: 100%; 
        margin: 0;
        padding: 0px ;
        background: #ffffff;
        font-family: sans-serif;
        font-size: 11px; /* Adjusted font size */
        color:#222
      }
      *, *:before, *:after {
        box-sizing: inherit;
        color:#222
      }

      .clearfix {
        display: block; }
      .left{
        float:left;
      }
      .right{
        float:right;
      }
      .top-area {    
        display: block;
        width:100%;
        
      }
      alignRight :{
        text-align: right !important;
      }
      alignLeft :{
        text-align: left;
      }
      .logo {
        width: 90px;
      }
      .company-info{
        text-align: right;
        font-size: 10px; /* Adjusted font size */
      }
      h1.invoice{
        font-size:15px; /* Adjusted font size */
        color:#8c0000;
        margin-top:0;
      }
      p.strong{
        font-weight:700;
      }
      .billTo p {
        text-align: right !important;
        float:right;
        display:block;
        font-size:9px; /* Adjusted font size */
        width:100%;
        margin-top:0;
        margin-bottom:5px; /* Adjusted margin */
        
      }

      .tableHeader{
        color:#8c0000;
      }
      .clearfix {
        display: block; }
      .col {
        float:left;
      }
      /* Adjusted column widths for smaller screens */
      .col-1 { width: 4.16667%; }
      .col-2 { width: 8.33333%; }
      .col-3 { width: 12.5%; }
      .col-4 { width: 16.66667%; }
      .col-5 { width: 20.83333%; }
      .col-6 { width: 25%; }
      .col-7 { width: 29.16667%; }
      .col-8 { width: 33.33333%; }
      .col-9 { width: 37.5%; }
      .col-10 { width: 41.66667%; }
      .col-11 { width: 45.83333%; }
      .col-12 { width: 50%; }
      .col-13 { width: 54.16667%; }
      .col-14 { width: 58.33333%; }
      .col-15 { width: 62.5%; }
      .col-16 { width: 66.66667%; }
      .col-17 { width: 70.83333%; }
      .col-18 { width: 75%; }
      .col-19 { width: 79.16667%; }
      .col-20 { width: 83.33333%; }
      .col-21 { width: 87.5%; }
      .col-22 { width: 91.66667%; }
      .col-23 { width: 95.83333%; }
      .col-24 { width: 100%; }
      .space {
        margin-top: 20px; /* Adjusted margin */
        margin-bottom: 30px; /* Adjusted margin */
        width:100%;
      }
      .top-area .number-invoice > h1 {
        font-weight: 500;
      }
      .about-invoice {
        padding: 0px 10px; /* Adjusted padding */
        margin-top: 5px; /* Adjusted margin */
        font-size: 9px; /* Adjusted font size */
      }
      .project-invoice {
        float: left;
        margin-bottom: 5px; /* Adjusted margin */
      }
      .project-invoice span {
        color: #5d6975;
        text-align: right;
        width: 40px; /* Adjusted width */
        margin-right: 5px; /* Adjusted margin */
        display: inline-block;
        font-size: 0.7em; /* Adjusted font size */
      }
      .company-invoice {
        float: right;
        text-align: right;
        margin-bottom: 40px; /* Adjusted margin */
      }
      .project-invoice div, .company-invoice div {
        white-space: nowrap;
        margin: 3px auto; /* Adjusted margin */
      }
      .table-invoice {
        width: 100%;
        border-collapse: collapse;
        border-spacing: 0;
        margin-bottom: 15px; /* Adjusted margin */
      }
      .table-invoice tr:nth-child(2n-1) td {
        background: #fcfeff;
      }
      .table-invoice th, .table-invoice td {
        text-align: center;
      }
      .table-invoice th {
        padding: 6px 8px; /* Adjusted padding */
        border-bottom: 1px solid #c2e0f2;
        color:#8c0000;
        white-space: nowrap;
        font-weight: 700;
        font-size: 9px; /* Adjusted font size */
      }
      tbody{
        border-bottom: 1px solid #c2e0f2;
      }
      .table-invoice .service, .table-invoice .desc {
        text-align: left;
      }
      .table-invoice td {
        padding: 8px ; /* Adjusted padding */
        text-align: right;
        font-size: 10px; /* Adjusted font size */
      }
      .table-invoice td.service, .table-invoice td.desc {
        vertical-align: top;
      }
      .table-invoice td.grand {
        border-top: 1px solid #5d6975;
      }
      .service span{
        display:block;
        clear:both;
        width : 100%;
        color:#666;
        margin-top:3px; /* Adjusted margin */
        font-size:8px; /* Adjusted font size */
      }
      .notice-invoice {
        padding: 10px;
      }
      .notice-invoice .notice {
        color: #5d6975;
      }
      .footer-invoice {
        margin-top:20px; /* Adjusted margin */
        color: #5d6975;
        width: 100%;
        position: absolute;
        bottom: 0;
        padding: 15px 0; /* Adjusted padding */
        text-align: center;
      }
 
  body
    
      header.clearfix
        .top-area
          img.logo.left(src="http://elgatoconbolsas.es/wp-content/uploads/2023/10/WhatsApp-Image-2023-09-26-at-20.12.32-1.jpeg")
          .right.company-info
              p.strong #{settings.company_name}
              p #{settings.company_address}
              p El Gato Con Bolsas
              p NIF: B55407647

        .col.col-24  
        <br>
        .left.col-14
            h1.invoice
              | #{translate('invoice')}
            div 
              .col.col-7
                p.strong #{translate('Date')} :
                p #{moment(model.date).format(dateFormat)}
              .col.col-8 
                p.strong #{translate('Number')} :
                p # #{model.number}/#{model.year || ""} 
              .col.col-9
                p.strong Nota:
                 p #{model.note}

        .right.col-10
            .billTo
                p Facturar a:
                p #{model.client.name}
                p Direcci√≥n: #{model.client.company.address}
                p CIF/NIF: #{model.client.company.cif}
        .col.col-24
      main
        table.table-invoice
          thead
            tr.tableHeader
              th.service #{translate('item')}
              th #{translate('Quantity')}
              th #{translate('PRICE')}
              th #{translate('TOTAL')}
          tbody
            each item in model.items
              tr
                td.service #{item.itemName}
                  span #{item.description}
                td.qty #{item.quantity}  
                td.unit  #{moneyFormatter({amount:item.price})}
                td.total #{moneyFormatter({amount:item.total})}
            tr
              td(colspan='3') #{translate('SUB TOTAL')}
              td.total #{moneyFormatter({amount:model.subTotal})}
            tr
              td(colspan='3') #{translate('TAX')} #{model.taxRate}%
              td.total #{moneyFormatter({amount:model.taxTotal})}
            tr
              td(colspan='3') Recargo 5.2%
              td.total #{moneyFormatter({amount:model.recargoTotal})}
            tr
              td.grand.total(colspan='3')  #{translate('TOTAL')} 
              td.grand.total #{moneyFormatter({amount:model.total})}
